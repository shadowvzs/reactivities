{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react",
        "strict": true,
        "removeComments": true,
        "esModuleInterop": true,
        "target": "es6",
        "experimentalDecorators": true,
        "lib": ["es2015", "dom", "dom.iterable"],
        "sourceMap": true,
        "baseUrl": "src",
        "paths": {
            "@common/*":   ["app/common/*"],
            "@layout/*":   ["app/layout/*"],
            "@models/*":   ["app/models/*"],
            "@features/*": ["features/*"],
            "@service":    ["app/api/service.ts"],
            "@stores/*":   ["app/stores/*"]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./typings-custom"
        ]        
    }
}
